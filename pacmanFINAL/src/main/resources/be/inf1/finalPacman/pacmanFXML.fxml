<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>



<BorderPane fx:controller="be.inf1.finalPacman.PacmanController" style="-fx-background-color: black;" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <BorderPane prefHeight="35" style="-fx-background-color: #0B5091; -fx-padding: 10px, 5px, 10px, 5px" >
            <left>
                <Label fx:id="scoreVakje" style="-fx-font-size: 150%; -fx-text-fill: white" />
            </left>
            <center>
                <Label fx:id="gameOverVakje" style="-fx-font-size: 150%; -fx-text-fill: white" />
            </center>
            <right>
                <Label fx:id="levelVakje" style="-fx-font-size: 150%; -fx-text-fill: white"/>
            </right>
        </BorderPane>
    </top>
    <center>
        <be.inf1.finalPacman.view.PacmanView fx:id="pacManView" rowCount="21" columnCount="19" />
    </center>
    <bottom>
        <HBox prefHeight="35" style="-fx-padding: 10px, 5px, 10px, 5px; -fx-background-color: #F3B61D">
            <Label style="-fx-font-size: 140%; -fx-text-fill: white"
                   text="Move: arrow keys / New game: G" />
        </HBox>
    </bottom>
</BorderPane>
